<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.D22.teamB.controllers.LabRequestController">
   <children>
      <Button layoutX="252.0" layoutY="259.0" mnemonicParsing="false" onAction="#sendRequest" text="Send Request" />
      <Label layoutX="204.0" layoutY="14.0" text="Lab Service Request">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="resultLabel" layoutX="150.0" layoutY="299.0" />
      <Label layoutX="277.0" layoutY="64.0" text="Patient" />
      <Button layoutX="18.0" layoutY="360.0" mnemonicParsing="false" onAction="#goToHomepage" text="Back to Homepage" />
      <ComboBox fx:id="patientNameComboBox" layoutX="225.0" layoutY="82.0" onAction="#setPatient" prefWidth="150.0">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:id="JOHN_DOE" fx:value="John Doe" />
               <String fx:id="JANE_SMITH" fx:value="Jane Smith" />
