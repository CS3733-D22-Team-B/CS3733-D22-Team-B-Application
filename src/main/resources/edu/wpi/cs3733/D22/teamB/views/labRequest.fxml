            <FXCollections fx:factory="observableArrayList">
               <String fx:id="XRAY" fx:value="X-Ray" />
               <String fx:id="CAT_SCAN" fx:value="CAT Scan" />
               <String fx:id="MRI" fx:value="MRI" />
            </FXCollections>
         </items>
      </ComboBox>
      <DatePicker fx:id="testingDatePicker" layoutX="213.0" layoutY="200.0" onAction="#setTestingTime" />
