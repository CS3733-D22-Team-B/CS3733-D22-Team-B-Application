            </FXCollections>
         </items>
      </ComboBox>
      <Label layoutX="274.0" layoutY="123.0" text="Lab Test" />
      <ComboBox fx:id="labTestComboBox" layoutX="225.0" layoutY="141.0" onAction="#setLabTest" prefWidth="150.0">
